{
  "$schema": "https://schema.tauri.app/config/2",
  "build": {
    "beforeBuildCommand": "pnpm --dir ui install && pnpm --dir ui build",
    "beforeDevCommand": "pnpm --dir ui dev",
    "devPath": "http://localhost:1420",
    "distDir": "../ui/dist"
  },
  "package": {
    "productName": "PiperDesk",
    "version": "0.1.0"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.example.piperdesk"
    },
    "windows": [
      {
        "title": "PiperDesk",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
